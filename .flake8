[flake8]
max-line-length = 88
extend-ignore =
    # Ignore whitespace before ':' (black handles this)
    E203,
    # Allow long lines in docstrings and comments
    E501,
    # Allow unused imports in type hints
    F401
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    venv,
    .venv,
    .tox,
    .mypy_cache,
    .pytest_cache
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py: F401
    # Allow long docstrings and type hints
    *.pyi: E501
    # Allow longer lines in test files
    tests/*: E501
    # Allow longer lines in tool definitions
    src/anthropic/tools/*.py: E501
    # Allow longer lines in core modules
    src/anthropic/core/*.py: E501
    # Allow longer lines in interface modules
    src/anthropic/interfaces/*.py: E501

max-complexity = 10
