[flake8]
max-line-length = 120
extend-ignore =
    # Allow unused imports in __init__.py files
    F401
    # Allow undefined names in certain cases (type hints, etc)
    F821
per-file-ignores =
    # Allow unused imports in __init__.py
    __init__.py:F401
    # Allow long lines in specific files that are hard to refactor
    src/anthropic/core/loop.py:E501
    src/anthropic/interfaces/streamlit_app.py:E501
    src/anthropic/tools/edit.py:E501
    src/anthropic/tools/computer.py:E501
    src/anthropic/tools/run.py:E501
    src/anthropic/tools/bash.py:E501
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info
